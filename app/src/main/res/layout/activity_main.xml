<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        tools:layout_editor_absoluteY="240dp">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.0">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="240dp">

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweather"
        android:text="SETTINGS"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="688dp" />

    <Button
        android:id="@+id/gallery_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="clear"
        android:drawableTop="@drawable/gallery_icon"
        android:paddingTop="20dp"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="291dp" />

    <Button
        android:id="@+id/about_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="clear"
        android:drawableTop="@drawable/aboutus_icon"
        android:paddingTop="20dp"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="436dp" />

    <Button
        android:id="@+id/settings_btn"
        android:layout_width="91dp"
        android:layout_height="83dp"
        android:background="clear"
        android:drawableTop="@drawable/settings_icon"
        android:paddingTop="20dp"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="586dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweather"
        android:text="GALLERY"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="391dp" />

    <Button
        android:id="@+id/scan_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="clear"
        android:drawableTop="@drawable/cam_icon"
        android:paddingTop="20dp"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="291dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweather"
        android:text="ABOUT US\n"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="539dp" />

    <Button
        android:id="@+id/exit_btn"
        android:layout_width="114dp"
        android:layout_height="122dp"
        android:background="clear"
        android:drawableTop="@drawable/exitt_icon"
        android:paddingTop="20dp"
        tools:layout_editor_absoluteX="250dp"
        tools:layout_editor_absoluteY="590dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweather"
        android:text="EXIT"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="277dp"
        tools:layout_editor_absoluteY="690dp" />

    <Button
        android:id="@+id/how_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="clear"
        android:drawableTop="@drawable/how_icon"
        android:paddingTop="20dp"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="434dp" />

    <TextView
        android:layout_width="146dp"
        android:layout_height="56dp"
        android:fontFamily="@font/merriweather"
        android:text="HOW TO\nUSE"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="539dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweather"
        android:text="SCAN"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="277dp"
        tools:layout_editor_absoluteY="396dp" />


</androidx.constraintlayout.widget.ConstraintLayout>